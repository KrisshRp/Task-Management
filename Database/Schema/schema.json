{
    "Users": {
        "collection": "Users",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "name" :{
                "type": "String",
                "required": true
            },
            "email": {
                "type": "String",
                "required": true
            },
            "password": {
                "type": "String",
                "required": true
            },
            "role": {
                "type": "String",
                "required": true
            },
            "avatar": {
                "type": "String",
                "required": false
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "Roles": {
        "collection": "Roles",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "rolename": {
                "type": "String",
                "required": true
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "Statuses": {
        "collection": "Statuses",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "statusTitle": {
                "type": "String",
                "required": true
            },
            "statusList": [{
                "substatus" : {
                    "type": "String",
                    "required": true
                },
                "color" : {
                    "type": "String",
                    "required": true,
                    "default": "#ffffff"
                }
            }],
            "is_default": {
                "type": "String",
                "required": true,
                "default": "Assigned"
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "Categories": {
        "collection": "Categories",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "categoryTitle": {
                "type": "String",
                "required": true
            },
            "color": {
                "type": "String",
                "required": true,
                "default": "#ffffff"
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "Brands": {
        "collection": "Brands",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "brandName": {
                "type": "String",
                "required": true
            },
            "brandLogo": {
                "type": "String",
                "required": false
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "Projects": {
        "collection": "Projects",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "projectName": {
                "type": "String",
                "required": true
            },
            "brand": {
                "type": "ObjectId",
                "required": true,
                "ref": "Brands"
            },
            "projectManager": {
                "type": "ObjectId",
                "required": true,
                "ref": "Users"
            },
            "projectCreator": {
                "type": "ObjectId",
                "required": true,
                "ref": "Users"
            },
            "statusList": {
                "type": "ObjectId",
                "required": true,
                "ref": "Statuses"
            },
            "projectCategory": {
                "type": "ObjectId",
                "required": true,
                "ref": "Categories"
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "tasks": {
        "collection": "Tasks",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "taskDetails": {
                "type": "String",
                "required": true
            },
            "taskRepeat": {
                "type": "Boolean",
                "required": true,
                "default": false
            },
            "taskRepeatDuration": {
                "type": "Number",
                "required": false
            },
            "taskDeadline": {
                "type": "Date",
                "required": false
            },
            "creator": {
                "type": "ObjectId",
                "required": false,
                "ref": "Users"
            },
            "project": {
                "type": "ObjectId",
                "required": true,
                "ref": "Projects"
            },
            "brand": {
                "type": "ObjectId",
                "required": true,
                "ref": "Brands"
            },
            "assignedTo": {
                "type": "ObjectId",
                "required": false,
                "ref": "Users"
            },
            "remark": {
                "type": "String",
                "required": false
            },
            "instruction": {
                "type": "String",
                "required": false
            },
            "submit_link": {
                "type": "String",
                "required": false
            },
            "status": {
                "type": "String",
                "required": true,
                "default":"Assigned"
            },
            "category": {
                "type": "ObjectId",
                "required": true,
                "ref": "Categories"
            },
            "is_delete": {
                "type": "Boolean",
                "require": true,
                "default": false
            }
        }
    },
    "taskLogs": {
        "collection": "TaskLogs",
        "schema": {
            "collection_id": {
                "type": "String",
                "required": true
            },
            "taskId": {
                "type": "String",
                "required": true
            },
            "taskInitial": {
                "type": "String",
                "required": true
            },
            "taskUpdate": {
                "type": "String",
                "required": true
            },
            "updateBy": {
                "type": "ObjectId",
                "required": false,
                "ref": "Users"
            }
        }
    }
}
